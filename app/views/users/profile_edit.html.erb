<%= render "shared/user_config" %>

<div class='account-contents'>
  <div class="top-account-content">
    <h2>プロフィール</h2>
  </div>

  <%= form_with model:@user, url: users_profile_update_path do |f|%>
    <div>
      <%= f.label :image,"アイコン画像",class: "form-label"%>
      <%= f.file_field :image , class:"form-control "%>
    </div>
    <div>
      <%= f.label :name,"名前" ,class: "form-label"%>
      <%= f.text_field :name, class:"form-control"%>
    </div>
    <div>
      <%= f.label :profile,"自己紹介",class: "form-label"%>
      <%= f.text_area :profile , class:"form-control"%>
    </div>
    <div>
      <a href = "/users/profile"><button type = "button">キャンセル</button></a>
      <%= f.submit "保存" %>
    </div>
  <% end %>
</div>

