<h2>施設情報の編集</h2>

<%= render "shared/error", obj: @room %>

<%= form_with model: @room do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"施設名" %><span>*</span></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :detail ,"施設詳細" %><span>*</span></th>
      <td><%= f.text_area :detail %></td>
    </tr>
    <tr>
      <th><%= f.label :charge ,"料金" %><span>*</span></th>
      <td><%= f.text_field :charge %></td>
    </tr>
    <tr>
      <th><%= f.label :address ,"住所" %><span>*</span></th>
      <td><%= f.text_area :address %></td>
    </tr>
    <tr>
      <th><%= f.label :image ,"施設画像" %></th>
      <td><%= f.file_field :image %></td>
    </tr>
      <%# user_id と関連づけ %>
      <%= f.hidden_field :user_id, value: @user.id %>
  </table>

  <div>
    <ul>
      <li><%= f.submit "保存" %></li>      
      <li><a href = "/rooms/own"><button type = "button" class="btn btn-secondary">キャンセル</button></a></li>
    </ul>
  </div>

  <p><span>*</span>は必須項目です</p>
<% end %>